  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"(src|tests)/**/*.ts\"",
    "start": "NODE_ENV=production node dist/src/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
